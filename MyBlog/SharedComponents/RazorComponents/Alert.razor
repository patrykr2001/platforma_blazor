<div class="@($"alert alert-{Style.ToString().ToLower()}")" role="alert">
    @ChildContent
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; } = @<p>Default content</p>;
    [Parameter]
    public AlertStyle Style { get; set; } = AlertStyle.Primary;

    public enum AlertStyle
    {
        Primary,
        Secondary,
        Success,
        Danger,
        Warning,
        Info,
        Light,
        Dark
    }
}